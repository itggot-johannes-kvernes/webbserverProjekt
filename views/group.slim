h2 = @group.name
br
.new_post
    form action="/new_group_post" method="post"
        input type="text" name="text" placeholder="New post" autocomplete="off"
        input type="hidden" name="group_id" value="#{@group.id}"
        button type="submit" Post

- for post in @posts
    .post
        .post_header
            h2.username = post.user.username
            h5.date = post.upload_date
        .post_content
            p = post.text